<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddBarber" >

    <TextView
        android:id="@+id/addbarber_texttoadddescription_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Add description:"
        android:textColor="@color/appblue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/addbarber_texttoaddphotos_tv"
        app:layout_constraintTop_toBottomOf="@+id/addbarber_texttoaddphotos_tv" />

    <TextView
        android:id="@+id/addbarber_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Name :"
        android:textColor="@color/appblue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addbarber_texttoaddphotos_tv"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Add picture of Barber work"
        android:textColor="@color/appblue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/addbarber_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/addbarber_name_tv" />

    <EditText
        android:id="@+id/addbarber_nameinput_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/addbarber_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addbarber_name_tv"
        app:layout_constraintTop_toTopOf="@+id/addbarber_name_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addbarber_addpictures_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape_selector"
        android:text="Add"
        android:textColor="@color/white"
        app:icon="@android:drawable/ic_menu_add"
        app:layout_constraintBottom_toBottomOf="@+id/addbarber_texttoaddphotos_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addbarber_texttoaddphotos_tv"
        app:layout_constraintTop_toTopOf="@+id/addbarber_texttoaddphotos_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addbarber_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/shape_selector"
        android:text="Save"
        android:textColor="@color/white"
        app:icon="@android:drawable/ic_menu_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/addbarber_workpic_iw"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/addbarber_save_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addbarber_texttoadddescription_tv"
        tools:src="@tools:sample/avatars" />

    <EditText
        android:id="@+id/addbarber_texttoadddescription_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/addbarber_texttoadddescription_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addbarber_texttoadddescription_tv"
        app:layout_constraintTop_toTopOf="@+id/addbarber_texttoadddescription_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>