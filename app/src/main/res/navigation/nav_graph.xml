        <action
            android:id="@+id/action_signUpAsBarberPage_to_logInPage"
            app:destination="@id/logInPage"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/logInPage"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/barberHomePage"
